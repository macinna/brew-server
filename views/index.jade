    .row
        .col-xs-12
            hr
    .row
        .col-lg-4
            .panel.panel-default
                .panel-heading
                    i.fa.fa-dashboard.fa-fw
                    span Current Temperature
                .panel-body
                    #mt_gauge_div.center-block(style='width:200px; height:200px')
        .col-lg-8
            .panel.panel-default
                .panel-heading
                    i.fa.fa-bar-chart.fa-fw
                    span Temperature History
                .panel-body
                    #mt_line_div
