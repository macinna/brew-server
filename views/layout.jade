       WARNING: Respond.js doesn't work if you view the page via file:// 
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    #wrapper
      //
         Navigation 
      nav.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0;')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') BM
        //
           /.navbar-header 
        ul.nav.navbar-top-links.navbar-right
          li
            a(href='#')
                  i.fa.fa-gear.fa-fw

          
        .navbar-default.sidebar(role='navigation')
          .sidebar-nav.navbar-collapse
            ul#side-menu.nav
              li
                a(href='/', class=title=='Brew'?'active':undefined)
                  i.fa.fa-beer.fa-fw
                  | Dashboard
              li
                a(href='/controls', class=title=='Controls'?'active':undefined)
                  i.fa.fa-wrench.fa-fw
                  | Controls
      //
         Page Content 
      #page-wrapper
        .row
          .col-lg-12
            block content

    //
       jQuery Version 1.11.0 
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    //
       Bootstrap Core JavaScript 
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    //
       Metis Menu Plugin JavaScript 
    script(src='//cdn.jsdelivr.net/bootstrap.metismenu/1.1.0/js/metismenu.min.js')
    //
       Custom Theme JavaScript 
    script(src='/javascripts/sb-admin-2.js')

    //
        Socket.io client
    script(src='http://cdn.socket.io/socket.io-1.0.6.js')

